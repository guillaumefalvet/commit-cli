{
  "name": "commit-cli",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple cli to commit and push to git",
  "main": "src/commit-cli/index.ts",
  "bin": {
    "c": "src/commit-cli/index.ts"
  },
  "scripts": {
    "start:commit": "tsx ./src/commit-cli/index.ts",
    "permission": "chmod u+x ./src/commit-cli/index.ts",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky && npm run permission"
  },
  "keywords": [],
  "validate-branch-name": {
    "pattern": "^(main|develop){1}$|^(refactor|feat|fix|hotfix|release)/.+$"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.2",
    "child_process": "^1.0.2",
    "commander": "^12.0.0",
    "figlet": "^1.7.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-spellcheck": "^0.0.20",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "validate-branch-name": "^1.3.0"
  }
}
