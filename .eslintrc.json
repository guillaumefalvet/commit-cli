{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier", "spellcheck"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "spellcheck/spell-checker": [
      1,
      {
        "comments": true,
        "strings": true,
        "identifiers": true,
        "templates": true,
        "lang": "en_US",
        "skipWords": ["dict", "aff", "hunspellchecker", "hunspell", "utils"],
        "skipIfMatch": ["#!/usr/bin/env npx tsx", "http://[^s]*", "^[-\\w]+/[-\\w\\.]+$"],
        "skipWordIfMatch": ["^foobar.*$"],
        "minLength": 3
      }
    ]
  }
}
